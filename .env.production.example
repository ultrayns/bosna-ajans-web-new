# BOSNAAJANS Production Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (MySQL)
# ===========================================
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=bosnaajans_cms
MYSQL_USER=strapi
MYSQL_PASSWORD=your_secure_strapi_password

# ===========================================
# STRAPI CMS
# ===========================================
# Security keys - GENERATE UNIQUE VALUES!
# Use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
API_TOKEN_SALT=your_api_token_salt_here
APP_KEYS=key1_base64,key2_base64,key3_base64,key4_base64
TRANSFER_TOKEN_SALT=your_transfer_token_salt_here

# ===========================================
# MEDIA STORAGE (Choose one provider)
# ===========================================
STORAGE_PROVIDER=local  # Options: local, r2, s3

# Cloudflare R2 (recommended)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=bosnaajans-media
R2_PUBLIC_URL=https://media.bosnaajans.com

# AWS S3 (alternative)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
AWS_BUCKET_NAME=

# ===========================================
# VIDEO STREAMING (Optional)
# ===========================================
# Cloudflare Stream
CF_STREAM_API_TOKEN=
CF_STREAM_ACCOUNT_ID=

# Mux (alternative)
MUX_TOKEN_ID=
MUX_TOKEN_SECRET=

# ===========================================
# FRONTEND (Next.js)
# ===========================================
NEXT_PUBLIC_STRAPI_URL=https://cms.bosnaajans.com
NEXT_PUBLIC_SITE_URL=https://bosnaajans.com
STRAPI_API_TOKEN=your_strapi_api_token

# ===========================================
# EMAIL NOTIFICATIONS
# ===========================================
EMAIL_PROVIDER=sendgrid  # Options: sendgrid, resend, console
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@bosnaajans.com
NOTIFICATION_EMAIL=info@bosnaajans.com

# ===========================================
# ERROR TRACKING (Sentry)
# ===========================================
SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=bosnaajans
SENTRY_PROJECT=web
